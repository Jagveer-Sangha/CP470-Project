<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/expense_edittext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif-black"
        android:hint="@string/value_budget_fragment_hint"
        android:inputType="numberDecimal"
        android:textSize="20dp" />

    <Button
        android:id="@+id/expense_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="41dp"
        android:backgroundTint="@color/green"
        android:text="@string/add_budget_fragment_button" />

    <Button
        android:id="@+id/expense_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="250dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="41dp"
        android:backgroundTint="@color/red"
        android:text="@string/cancel_budget_fragment_button" />

    <Spinner
        android:id="@+id/expense_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/expense_edittext1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="40dp" />

    <TextView
        android:id="@+id/expense_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/expense_spinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="194dp"
        android:layout_marginBottom="20dp"
        android:text="@string/category_text" />

    <TextView
        android:id="@+id/expense_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/expense_edittext1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="261dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/current_expense_text"
        android:textAlignment="center"
        android:textSize="20dp" />

    <Switch
        android:id="@+id/expense_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/expense_textView1"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="67dp"
        android:text="@string/switch_text" />

</RelativeLayout>