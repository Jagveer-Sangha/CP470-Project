<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/budget_edittext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif-black"
        android:hint="@string/value_budget_fragment_hint"
        android:inputType="numberDecimal"
        android:textSize="20dp" />

    <Button
        android:id="@+id/budget_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="41dp"
        android:backgroundTint="@color/green"
        android:text="@string/add_budget_fragment_button" />

    <Button
        android:id="@+id/budget_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="250dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="41dp"
        android:backgroundTint="@color/red"
        android:text="@string/cancel_budget_fragment_button" />

    <TextView
        android:id="@+id/budget_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/budget_edittext1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="251dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/current_budget_text"
        android:textAlignment="center"
        android:textSize="20dp" />

    <Switch
        android:id="@+id/budget_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/budget_edittext1"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="117dp"
        android:text="@string/switch_text" />
</RelativeLayout>